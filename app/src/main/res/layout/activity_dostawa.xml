<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dostawaActivity"
    android:padding="20dp"
    android:background="@color/green">

    <TextView
        android:id="@+id/jd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dostępne Modele samochodów"
        android:textSize="25dp"/>
<TextView
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mercedes AMG GT"
    android:textSize="15dp"
    android:layout_below="@+id/jd"
    android:id="@+id/mercGt"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="292dp"
        android:layout_height="81dp"
        android:layout_below="@+id/mercGt"
        android:layout_marginTop="11dp"
        android:src="@drawable/gt_merc" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/img1"
    android:layout_marginTop="15dp"
    android:text="Ford Shelby Cobra"
    android:id="@+id/cobra"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="290dp"
        android:layout_height="81dp"
        android:layout_below="@+id/cobra"
        android:layout_marginTop="11dp"
        android:src="@drawable/shleby" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img2"
        android:layout_marginTop="15dp"
        android:text="Ford Mustang GTR"
        android:id="@+id/gtr"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="290dp"
        android:layout_height="81dp"
        android:layout_below="@+id/gtr"
        android:layout_marginTop="11dp"
        android:src="@drawable/gtr2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img3"
        android:layout_marginTop="15dp"
        android:text="Porshe Cayman"
        android:id="@+id/cayman"/>

    <ImageView
        android:id="@+id/img4"
        android:layout_width="290dp"
        android:layout_height="81dp"
        android:layout_below="@+id/cayman"
        android:layout_marginTop="11dp"
        android:src="@drawable/cayman" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img4"
        android:layout_marginTop="15dp"
        android:text="Porshe Cayman"
        android:id="@+id/klasG"/>

    <ImageView
        android:id="@+id/img5"
        android:layout_width="279dp"
        android:layout_height="69dp"
        android:layout_below="@+id/klasG"
        android:layout_marginTop="11dp"
        android:src="@drawable/klasa_g" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img5"
        android:text="cofnij"
        android:id="@+id/button1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img5"
        android:layout_toRightOf="@id/img5"
        android:id="@+id/button2"
        android:text="Dalej"/>
</RelativeLayout>